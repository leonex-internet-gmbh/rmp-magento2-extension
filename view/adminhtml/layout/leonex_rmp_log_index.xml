<?xml version="1.0" encoding="UTF-8"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <update handle="styles"/>
    <body>
        <referenceContainer name="content">
            <block class="Leonex\RiskManagementPlatform\Block\Adminhtml\Log\Grid\Container" name="leonex_rmp_log_grid">
                <block class="Leonex\RiskManagementPlatform\Block\Adminhtml\Log\Grid" name="leonex_rmp_log_grid.grid" as="grid">
                    <arguments>
                        <argument name="id" xsi:type="string">log_id</argument>
                        <argument name="dataSource" xsi:type="object">Leonex\RiskManagementPlatform\Model\ResourceModel\Log\Collection</argument>
                        <argument name="default_sort" xsi:type="string">id</argument>
                        <argument name="default_dir" xsi:type="string">DESC</argument>
                        <argument name="save_parameters_in_session" xsi:type="string">1</argument>
                    </arguments>
                    <block class="Magento\Backend\Block\Widget\Grid\ColumnSet" name="leonex_rmp_log_grid.grid.columnSet" as="grid.columnSet">
                        <arguments>
                            <argument name="rowUrl" xsi:type="array">
                                <item name="path" xsi:type="string">*/*/view</item>
                                <item name="extraParamsTemplate" xsi:type="array">
                                    <item name="id" xsi:type="string">getId</item>
                                </item>
                            </argument>
                        </arguments>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="log_id">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">ID</argument>
                                <argument name="index" xsi:type="string">log_id</argument>
                                <argument name="type" xsi:type="string">text</argument>
                                <argument name="column_css_class" xsi:type="string">col-id</argument>
                                <argument name="header_css_class" xsi:type="string">col-id</argument>
                                <argument name="filter_index" xsi:type="string">main_table.log_id</argument>
                                <argument name="sortable" xsi:type="boolean">1</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="quote_id">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Quote ID</argument>
                                <argument name="index" xsi:type="string">quote_id</argument>
                                <argument name="type" xsi:type="string">text</argument>
                                <argument name="filter_index" xsi:type="string">main_table.quote_id</argument>
                                <argument name="sortable" xsi:type="boolean">1</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="order_increment_id">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Order ID</argument>
                                <argument name="index" xsi:type="string">order_increment_id</argument>
                                <argument name="type" xsi:type="string">text</argument>
                                <argument name="filter_index" xsi:type="string">order.increment_id</argument>
                                <argument name="sortable" xsi:type="boolean">1</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="billing_name">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Bill-to Name</argument>
                                <argument name="index" xsi:type="string">billing_name</argument>
                                <argument name="type" xsi:type="string">text</argument>
                                <argument name="filter" xsi:type="boolean">0</argument>
                                <argument name="sortable" xsi:type="boolean">0</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="tag">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Tag</argument>
                                <argument name="index" xsi:type="string">tag</argument>
                                <argument name="type" xsi:type="string">text</argument>
                                <argument name="filter_index" xsi:type="string">main_table.tag</argument>
                                <argument name="sortable" xsi:type="boolean">1</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="message">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Message</argument>
                                <argument name="index" xsi:type="string">message</argument>
                                <argument name="type" xsi:type="string">text</argument>
                                <argument name="filter_index" xsi:type="string">main_table.message</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="created_at">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Created</argument>
                                <argument name="index" xsi:type="string">created_at</argument>
                                <argument name="type" xsi:type="string">datetime</argument>
                                <argument name="sortable" xsi:type="boolean">1</argument>
                                <argument name="filter" xsi:type="boolean">0</argument>
                            </arguments>
                        </block>
                    </block>
                </block>
            </block>
        </referenceContainer>
    </body>
</page>
